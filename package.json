{
  "name": "guillem-portfolio",
  "description": "My personal website and portfolio. Fourth iteration of the site. Ghost theme.",
  "version": "4.1.1",
  "homepage": "https://guillemandreu.com",
  "author": {
    "name": "Guillem Andreu",
    "email": "hi@guillemandreu.com",
    "url": "https://guillemandreu.com"
  },
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/guill3m/portfolio",
  "engines": {
    "ghost": ">=1.2.0"
  },
  "browserslist": [
    "> 5%",
    "last 3 versions",
    "Firefox ESR",
    "not Android < 5",
    "not BlackBerry > 0",
    "not IE < 11",
    "not IE_mob < 11",
    "not OperaMini all",
    "not OperaMobile < 13"
  ],
  "config": {
    "posts_per_page": 999
  },
  "dependencies": {},
  "devDependencies": {
    "alex": "^5.1.0",
    "autoprefixer": "^7.1.6",
    "csscomb": "^4.2.0",
    "husky": "^0.14.3",
    "node-sass": "^4.7.2",
    "postcss-cli": "^4.1.0",
    "sass-lint": "^1.12.1",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  },
  "scripts": {
    "build": "yarn run build:css",
    "build:css": "node-sass --output-style compressed assets/css/main.scss | postcss --use autoprefixer --no-map --output assets/built/main.css",
    "clean": "rm assets/built/*",
    "lint": "yarn run lint:js && yarn run lint:sass && yarn run lint:txt",
    "lint:js": "standard --verbose | snazzy",
    "lint:sass": "csscomb assets/css --lint --verbose && sass-lint --verbose",
    "lint:txt": "alex */*.hbs *.hbs *.md",
    "precommit": "yarn run lint"
  }
}
